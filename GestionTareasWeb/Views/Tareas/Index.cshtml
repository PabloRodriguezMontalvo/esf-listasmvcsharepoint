@model IEnumerable<GestionTareasWeb.Models.MiTarea>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva tarea", "Alta")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tarea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finalizada)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tarea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Finalizada)
        </td>
        <td>
            @Html.ActionLink("Finalizar", "Finalizar", new { id=item.ID }) |
           
            @Html.ActionLink("Eliminar", "Borrar", new { id=item.ID })
        </td>
    </tr>
}

</table>
